    <gradient
        android:angle="135"
        android:centerColor="#FCD3DF"
        android:endColor="#F2BDFD"
        android:startColor="#F78DB1"
        android:type="linear" />
    <!-- android:radius 弧形的半径 -->
    <!-- 设置按钮的四个角为弧形 -->
    <corners
        android:radius="5dip" />
    <!--也可单独设置-->
     <corners
     android:topLeftRadius="50dp"
     android:topRightRadius="50dp"
     android:bottomRightRadius="50dp"
      android:bottomLeftRadius="50dp"
       />
